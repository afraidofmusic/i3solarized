"split navigations
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

syntax on
set backspace=indent,eol,start	
set cursorline
set hlsearch	
set ignorecase	
set incsearch	
set laststatus=2
set linebreak	
set number	
set relativenumber
set ruler
set showmatch	
set smartcase	
set smarttab	
set undolevels=1000	
set visualbell	

set background=dark
colorscheme solarized
